@model IEnumerable<ProjectLTWwarriors.Models.Users>

@{
    ViewBag.Title = "Quản lí khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Quản lý khách hàng</h2>

@using (Html.BeginForm("Index", "AccountCustomer", FormMethod.Get))
 {
                <div class="form-inline">
                    <input type="text" name="search" class="form-control" placeholder="Tìm tên, email, tài khoản" />
                    <input type="submit" value="Tìm kiếm" class="btn btn-info btn-sm" />
                </div>
 }    

<br />

<table class="table table-bordered table-striped">
    <tr>
        <th>Họ và tên</th>
        <th>Tài khoản</th>
        <th>Email</th>
        <th>Số điện thoại</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
     {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>
                        @Html.ActionLink("Chi tiết","Details", "AccountCustomer", new {id = item.Id}, new { @class = "btn btn-info btn-sm"})
                    </td>
                </tr>
     }
</table>
