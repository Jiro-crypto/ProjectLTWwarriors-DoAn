@model ProjectLTWwarriors.Models.Categories

@{
    ViewBag.Title = "Sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sửa danh mục</h2>


@using (Html.BeginForm())
{
