@model IEnumerable<ProjectLTWwarriors.Models.Categories>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-light">DANH SÁCH DANH MỤC</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}


<table class="table">
    <tr>
        <th>
            Tên danh mục
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-dark btn-sm" }) 
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @class = "btn btn-dark btn-sm" }) 
                @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-dark btn-sm" })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Thêm danh mục mới", "Create", null, new { @class = "btn btn-dark" })
</p>
