@model IEnumerable<ProjectLTWwarriors.Models.Orders>

@{
    ViewBag.Title = "Quản lý đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Quản lý đơn hàng</h2>

@using (Html.BeginForm("Index", "OrderManagement", FormMethod.Get))
{
    <div class="form-inline">
        <input type="text" name="search" class="form-control" placeholder="Mã đơn / tên khách / tài khoản" />
        <input type="submit" value="Tìm" class="btn btn-info btn-sm" />
    </div>
}

<br />

<table class="table table-bordered table-striped">
    <tr>
        <th>Mã ĐH</th>
        <th>Khách hàng</th>
        <th>Ngày đặt</th>
        <th>Tổng tiền</th>
        <th>Trạng thái</th>
        <th>Thanh toán</th>
        <th></th>
    </tr>

    @foreach (var o in Model)
    {
        <tr>
            <td>@o.MaDon</td>
            <td>@(o.Users != null ? o.Users.FullName : "")</td>
            <td>@o.CreatedAt.ToString("dd/MM/yyyy")</td>
            <td>@String.Format("{0:N0}đ", o.TongCong)</td>
            <td>@o.TrangThai</td>
            <td>@o.PhuongThucThanhToan</td>
            <td>
                @Html.ActionLink("Chi tiết", "Details", "OrderManagement", new { id = o.Id }, new { @class = "btn btn-info btn-sm" })
            </td>
        </tr>
    }
</table>
